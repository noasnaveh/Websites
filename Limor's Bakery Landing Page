// הפונקציות המקוריות שלך
function toggleDates(type) {
  const container = document.getElementById(type + '-dates');
  if (container) container.classList.toggle('active');
}

function openModal(workshopName, price) {
  document.getElementById('workshopName').textContent = workshopName;
  document.getElementById('workshopPrice').textContent = price;
  document.getElementById('registrationModal').style.display = 'block';
}

function closeModal() {
  document.getElementById('registrationModal').style.display = 'none';
}

function processPayment() {
  alert('מעביר אותך לעמוד התשלום המאובטח של PayBox...');
  // כאן אפשר לשים קישור אמיתי:
  // window.location.href = 'https://payboxapp.page.link/your-business-link';
}

window.onclick = function(event) {
  const modal = document.getElementById('registrationModal');
  if (event.target == modal) {
    closeModal();
  }
};
